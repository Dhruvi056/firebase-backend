rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Forms collection - users can only access their own forms
    match /forms/{formId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Allow read/write access to submissions subcollection (public for form submissions)
      match /submissions/{submissionId} {
        allow read: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/forms/$(formId)).data.userId;
        allow write: if true; // Allow form submissions from webflow
      }
    }
    
    // Folders collection - users can only access their own folders
    match /folders/{folderId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}

